{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.zombie_comun_walk": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "walk": "query.ground_speed > 0.1"
                        }
                    ],
                    "blend_transition" : 0.1
                },
                "walk": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "default": "query.ground_speed <= 0.1"
                        }
                    ],
                    "blend_transition" : 0.1
                }
            }
        }
    }
}