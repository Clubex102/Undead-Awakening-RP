{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.zombie_comun": {
			"states": {
				"walk": {
					"sound_effects": [
						{"effect": ""}
					],
					"transitions": [
						{"walk": "query.is_moving"}
					],
					"blend_transition": 0.1,
					"blend_via_shortest_path": true
				},
				"move": {
					"animations": ["walk"],
					"transitions": [
						{"move": "!query.is_moving"}
					],
					"blend_transition": 1.0,
					"blend_via_shortest_path": true
				}
			}
		},
		"controller.animation.zombie_comun_idle": {
			"states": {
				"default": {
					"transitions": [
						{"idle": "!query.is_moving"}
					],
					"blend_transition": 0.9,
					"blend_via_shortest_path": true
				},
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"default": "query.is_moving"}
					],
					"blend_transition": 1.0,
					"blend_via_shortest_path": true
				}
			}
		},
		"controller.animation.zombie_comun_climb": {
			"states": {
				"floor": {
					"transitions": [
						{"climb": "query.is_wall_climbing"}
					],
					"blend_transition": 0.9,
					"blend_via_shortest_path": true
				},
				"climb": {
					"animations": ["climb"],
					"transitions": [
						{"floor": "!query.is_wall_climbing"}
					],
					"blend_transition": 1.0,
					"blend_via_shortest_path": true
				}
			}
		},
		"controller.animation.zombie_comun_atack": {
			"states": {
				"noattack": {
					"transitions": [
						{"atack": "variable.attack>0"}
					],
					"blend_transition": 0.9,
					"blend_via_shortest_path": true
				},
				"atack": {
					"animations": ["animation.zombie_comun.atack"],
					"transitions": [
						{
							"noattack": "query.all_animations_finished"
						}
					],
					"blend_transition": 1.0,
					"blend_via_shortest_path": true
				}
			}
		}

	}
}