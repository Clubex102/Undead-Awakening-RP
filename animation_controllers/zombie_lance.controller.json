{
    "format_version": "1.10.0",
    "animation_controllers": {
    "controller.animation.zombie_lance": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {
              "walk": "query.modified_move_speed > 0.1"
            },
            {
              "attack": "variable.attack>0"
            }
          ]
        },
        "walk": {
          "animations": [
            "walk"
          ],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.1"
            },
            {
              "attack": "variable.attack>0"
            }
          ]
        },
        "attack": {
          "animations": [
            "atack"
          ],
          "transitions": [
            {
              "default": "!variable.attack>0"
            }
          ],
          "blend_via_shortest_path": false
        }
      }
    } 
  }
}
