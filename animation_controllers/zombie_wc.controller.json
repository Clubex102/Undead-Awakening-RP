{
    "format_version": "1.10.0",
    "animation_controllers": {
    "controller.animation.zombie_wc": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            "idle"
          ],
          "transitions": [
            {
              "walk": "query.modified_move_speed > 0.2"
            },
            {
              "attack": "variable.attack>1"
            }
          ],

					"blend_via_shortest_path": true
        },
        "walk": {
          "animations": [
            "walk"
          ],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.2"
            },
            {
              "attack": "variable.attack>0"
            }
          ],

					"blend_via_shortest_path": true
        },
        "attack": {
          "animations": [
            "attack"
          ],
          "transitions": [
            {
              "default": "!variable.attack>0"
            }
          ]
        }
      }
    } 
  }
}
