{
    "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.zombierange": {
      "states": {
        "walk": {
          "animations": ["walk"],
          "transitions": [
            { "walk": "query.ground_speed>=0.2" }
          ],
          "blend_transition": 0.1,
          "blend_via_shortest_path": true
        },
        "default": {
          "transitions": [
            { "default": "!query.is_moving" }
          ],
          "blend_transition": 0.9,
          "blend_via_shortest_path": true
        }
      }
    },

    "controller.animation.zombierange_attack": {
      "states": {
        "noattack": {
          "transitions": [
            { "attack": "query.is_charging" }
          ],
          "blend_transition": 0.9,
          "blend_via_shortest_path": true
        },
        "attack": {
          "animations": ["animation.zombierange.attack"],
          "transitions": [
            { "noattack": "query.all_animations_finished" }
          ],
          "blend_transition": 8.0,
          "blend_via_shortest_path": true
        }
      }
    }
  }
}
