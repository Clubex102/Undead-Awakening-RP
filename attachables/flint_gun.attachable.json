{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "udaw:flintlockgun",
            "materials": {
                "default": "entity_alphablend"
            },
            "textures": {
                "default": "textures/items/texture_gun"
            },
            "geometry": {
                "default": "geometry.flint_gun"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "animations": {
                "tpp": "animation.gun.thirdperson",
                "fpp_shot": "animation.gun.firstperson_shot",
                "fpp_hold": "animation.gun.firstperson2"
            },
            "scripts": {
                "animate": [
                    {
                        "tpp": "!c.is_first_person"
                    },
                    {
                        "fpp_hold": "c.is_first_person && !q.is_using_item"
                    },
                    {
                        "fpp_shot": "c.is_first_person && q.is_using_item"
                    }
                ]
            }
        }
    }
}