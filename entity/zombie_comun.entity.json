{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "udaw:zombiecomun",
      "materials": {
        "default": "entity_alphatest"
      },
      "textures": {
        "default": "textures/entity/zombiecomun.png"
      },
      "geometry": {
        "default": "geometry.zombie_comun"
      },
      "render_controllers": [
        "controller.render.default"
      ],
      "animations": {
        "walk":"animation.zombie_comun.walk",
        "idle":"animation.zombie_comun.idle",
        "zombie_comun": "controller.animation.zombie_comun",
        "climb": "animation.zombie_comun.climb",
        "atack": "controller.animation.zombie_comun_atack",
        "animation.zombie_comun.atack": "animation.zombie_comun.atack"
      },
      "scripts": {
        "animate": [
          {
            "zombie_comun": "query.is_moving"
          },
          {
            "idle": "!query.is_moving"
          },
          {
            "climb": "query.is_wall_climbing"
          },
          {
            "atack": "variable.attack_time > 0"
          }
        ],
        "pre_animation": [
            "variable.attack = math.sin(variable.attack_time*30.0);"
          ]
      }
    }
  }
}