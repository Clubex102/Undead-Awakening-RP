{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "udaw:zombielance",
            "materials": {
                "default": "entity_alphatest"
            },
            "textures": {
                "default": "textures/entity/zombie_lance.png"
            },
            "geometry": {
                "default": "geometry.zombie_lance"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "spawn_egg": {
                "texture": "spawn_egg_zombie_lance"
            },
            "animations": {
                "idle": "animation.zombielance.idle",
                "walk": "animation.zombielance.walk",
                "atack": "animation.zombielance.atack",
                "attack_controller": "controller.animation.zombie_lance"

            },
            "scripts": {
                
                "animate": [
                    {
                        "walk": "query.is_moving"
                    },
                    {
                        "idle": "!query.is_moving"
                    },
                    {
                        "atack": "variable.attack_time > 0"
                    },
                    "attack_controller"
                ],
                        "pre_animation": [
            "variable.attack = math.sin(variable.attack_time*30.0);"
            ]
                }
        }
    }
}