{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "udaw:zombieminer",
      "materials": {
        "default": "entity_alphatest"
      },
      "textures": {
        "default": "textures/entity/zombieminer.png"
      },
      "geometry": {
        "default": "geometry.zombie.zombieminer"
      },
      "render_controllers": [
        "controller.render.default"
      ],
      "spawn_egg": {
        "texture": "spawn_egg_zombie_miner"
      },
      "animations": {
        "walk":"animation.zombieminer.walk",
        "idle":"animation.zombieminer.idle",
        "climb": "animation.zombieminer.climb",
        "atack": "animation.zombieminer.atack",
        "attack_controller": "controller.animation.zombie_miner"
      },
      "scripts": {
        "animate": [
          {
            "walk": "query.is_moving && !variable.attack_time < 20"
          },
          {
            "idle": "!query.is_moving"
          },
          {
            "climb": "query.is_wall_climbing"
          },
          {
            "atack": "variable.attack_time > 0"
          },
          "attack_controller"
        ],
        "pre_animation": [
            "variable.attack = math.sin(variable.attack_time*30.0);"
          ]
      }
    }
  }
}
